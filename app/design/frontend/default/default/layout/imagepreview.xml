<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
    </default>

    <imagepreview_preview_index translate="label">
    </imagepreview_preview_index>
    
    <catalog_product_view translate="label">
    	<reference name="head">
    		<action method="addCss" ifconfig="imagepreview/common/enabled"><stylesheet>css/imagepreview/styles.css</stylesheet></action>
    		<action method="addItem" ifconfig="imagepreview/common/enabled"><type>skin_js</type><name>js/imagepreview/ip.js</name></action>
    	</reference>
    	<reference name="content">
    		<block type="imagepreview/view" name="imagepreview" template="imagepreview/content.phtml" before="media"></block>
    	</reference>
    	<reference name="product.info.media">
    		<action method="setTemplate" ifconfig="imagepreview/common/enabled">
    			<template>imagepreview/media.phtml</template>
			</action>
    	</reference>
    </catalog_product_view>
</layout>