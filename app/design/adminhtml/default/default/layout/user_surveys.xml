<layout>
    <adminhtml_surveys_index>
        <reference name="content">
            <block type="user_surveys/adminhtml_surveys" name="surveys" />
        </reference>
    </adminhtml_surveys_index>

     <adminhtml_surveys_results>
        <reference name="content">
            <block type="user_surveys/adminhtml_results" name="surveys_results" />
        </reference>
    </adminhtml_surveys_results>

    <adminhtml_surveys_grid>
        <block type="user_surveys/adminhtml_surveys_grid" name="root"/>
    </adminhtml_surveys_grid>

    <adminhtml_results_grid>
        <block type="user_surveys/adminhtml_results_grid" name="results"/>
    </adminhtml_results_grid>

    <adminhtml_surveys_new>
        <update handle="adminhtml_surveys_edit" />
    </adminhtml_surveys_new>

    <adminhtml_surveys_edit>
        <update handle="editor"/>
        <reference name="content">
            <block type="user_surveys/adminhtml_surveys_edit" name="surveys_edit" />
        </reference>
        <reference name="left">
            <block type="user_surveys/adminhtml_surveys_edit_tabs" name="surveys_edit_tabs">
                <block type="user_surveys/adminhtml_surveys_edit_tab_main" name="surveys_edit_tab_main" />
                <block type="user_surveys/adminhtml_surveys_edit_tab_content" name="surveys_edit_tab_content" />
                <block type="user_surveys/adminhtml_surveys_edit_tab_image" name="surveys_edit_tab_image" />
                <action method="addTab"><name>main_section</name><block>surveys_edit_tab_main</block></action>
                <action method="addTab"><name>content_section</name><block>surveys_edit_tab_content</block></action>
            </block>
        </reference>
    </adminhtml_surveys_edit>
    
    <adminhtml_results_feedback>
        <reference name="content">
            <block type="user_surveys/adminhtml_results_feedback" name="feedback"/>
        </reference>        
    </adminhtml_results_feedback>
    
</layout>
