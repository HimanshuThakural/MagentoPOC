<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addJs">
                <script>jquery/clarion/customerattribute/jQuery.js</script>
            </action>
            <action method="addCss">
                <stylesheet>css/clarion/customerattribute.css</stylesheet>
            </action>
        </reference>

        <reference name="header">
            <action method="setTemplate">
                <template>customerattribute/page/html/header.phtml</template>
            </action>
            <block type="customerattribute/header_profileimage" name="header_profileimage" template="customerattribute/header/profileimage.phtml"/>
        </reference>
    </default>

    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="customerattribute">
                <name>set_profileimage</name>
                <path>customerattribute/customer/form</path>
                <label>My Profileimage</label>
            </action>
        </reference>
    </customer_account>

    <customerattribute_customer_form>
        <label>My Profileimage</label>
        <update handle="customer_account"/>

        <reference name="my.account.wrapper">
            <block  type="customerattribute/header_profileimage" name="customerattribute_customer_form" template="customerattribute/customer/form.phtml" />
        </reference>
        <reference name="root">
            <action
                method="setHeaderTitle"
                translate="title"
                module="customerattribute">
                <title>My Profileimage</title>
            </action>
        </reference>
    </customerattribute_customer_form>
</layout>
